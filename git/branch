
#
https://learngitbranching.js.org/

# show
# -a all
# -v verbose
# -r remote
#

$ git branch
$ git branch -v
$ git branch -vv
$ git branch -a

# set relationship branch
# origin/remote-branch <--> local-branch
$ git branch --set-upstream-to=origin/remote-branch local-branch
# show relationship to upstream branch
$ git branch -vv
# push with current branch
$ git config --global push.default current

# add
$ git branch <new-branch> [<commit-id>]

# switch
$ git checkout <new-branch>

# add & checkout
$ git checkout -b <new-branch>

# checkout remote branch (-t, --track)
$ git checkout -t <remote-branch>

# modify
$ git branch -m <current> <new-branch>

# push branch
$ git push origin <new-branch>

# delete
$ git branch -d <new-branch>

$ git push origin :<new-branch>

# delete remote
$ git push origin --delete <new-branch>


# merge
$ git checkout main
$ git merge bug-fix

# clone branch
$ git clone -b <branchname> <remote-repo-url>

# can't see branch
$ git fetch

